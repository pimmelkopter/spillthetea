# Production Configuration
NODE_ENV=production
PORT=3000
TZ=Europe/Berlin

# Database
DATABASE_PATH=/app/data/chatshare.db

# Security
BCRYPT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Rate Limiting (angepasst f√ºr Production)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Domain (wird von nginx-proxy automatisch gesetzt)
DOMAIN=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

VAPID_PUBLIC_KEY=BM_your_public_key_here
VAPID_PRIVATE_KEY=your_private_key_here
VAPID_EMAIL=your-email@example.com